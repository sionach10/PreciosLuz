<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/background_shape">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="@android:color/white"/>
            <padding android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp"/>
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#809BE38F"/> <!-- Semi-transparent shadow color -->
        </shape>
    </item>
</layer-list>
