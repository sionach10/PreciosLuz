<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment"
    android:layout_marginBottom="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/design_default_color_primary">

        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MaterialSearchBarLight"
            app:mt_searchBarColor="@color/design_default_color_primary"
            app:mt_hint="BÃºsqueda"
            app:mt_hintColor="@color/gris_claro"
            app:mt_placeholder="Buscar"
            app:mt_placeholderColor="@color/white"
            app:mt_maxSuggestionsCount="10"
            app:mt_searchIconTint="@color/white"
            app:mt_menuIconTint="@color/white"
            app:mt_clearIconTint="@color/white"
            app:mt_backIconTint="@color/white"
            app:mt_textColor="@color/white"
            app:mt_leftTextSelectorTint="@color/gris_claro"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_add"
        android:layout_margin="15dp"/>



</FrameLayout>